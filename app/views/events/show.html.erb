<% provide(:title, 'イベント参照') %>
<p id="notice"><%= notice %></p>
<div class="container">

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="page-header">
          <h1>イベント参照</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="well bs-component">
          <%= form_for @event, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
            <fieldset>
            <legend>イベント基本情報</legend>
              <div class="form-group">
                <%= f.label :name, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= @event.name %> 
                </div>
              </div>
              <div class="form-group">
                <%= f.label :memo, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= @event.memo %>
                  </div>
              </div>
              <div class="form-group">
                <%= f.label :date, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                          <%= @event.formatted_date %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :participants, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <% if @event.users.empty? %>
                    イベント参加中のユーザは存在しません   
                  <% else %>
                    <ul>
                      <% @event.users.each do |u| %>
                        <li><%= u.name %></li>
                      <% end %>
                    </ul>
                  <% end %>

                </div>
              </div>
            </fieldset>
          <% end %>


<fieldset>
              <legend>登録済支払情報</legend>
              <% if @event.items.empty? %>
                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                    登録済支払情報はありません
                  </div>
                </div>
              <% else %>
                <div class="form-group">
                  <div class="col-lg-12">
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>支払元</th>
                          <th>支払先</th>
                          <th>品目</th>
                          <th>金額</th>
                          <th>精算状況</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @event.items.each do |item| %>
                          <% unless item.payments.empty? then %> 
                            <% item.payments.each do |payment| %>
                              <tr>
                                <td><%= User.find_by(id: Participant.find_by(id: payment.participant_id).user_id).name %></td>
                                <td><%= User.find_by(id: item.user_id).name %></td>
                                <td><%= item.memo %></td>
                                <td><%= payment.price %></td>
                                <td><%= payment.status ? '精算済' : '未精算' %></td>
                              </tr>
                            <% end %>
                          <% end %>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              <% end %>
          
        </div>
      </div>
    </div>
  </div>




    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="well bs-component">
<p>
<%=  link_to 'イベントを編集するよ',{controller: :events , action: :edit}  ,class: :"btn btn-success btn-lg" %>
<%=  link_to 'イベントを見るよ',{controller: :events , action: :index}  ,class: :"btn btn-warning btn-lg" %>
</p>
</div>
</div>
</div>
</div>

</div>