<% provide(:title, 'イベントリスト') %>
<div class="container">

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="page-header">
          <h1>イベントリスト</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="well bs-component">
  <table class="table table-borderd">
              <tr>
                  <th>詳細</th>
                  <th>ID</th>
                  <th>イベント名</th>
                  <th>概要</th>
                  <th>参加者</th>
                  <th>作成日</th>
              </tr>
    <% @event.each do |ev|%>
    <tr>
              <td>
                  <%= link_to '詳細' , ev %>
              </td>
    <td><%= ev.id %></td>
    <td><%= ev.name %></td>
    <td><%= ev.memo %></td>
                <td>
                <ul>
                      <% ev.users.each do |u| %>
                        <li><%= u.name %></li>
                      <% end %>
                </ul>
                </td>
    <td><%= ev.formatted_date %></td>
    </tr>
         <% end %>
  </table>
</div>
</div>
</div>
</div>

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="well bs-component">
<p>
<%=  link_to 'イベントを作るよ',{controller: :events , action: :new}  ,class: :"btn btn-success btn-lg" %>
</p>
</div>
</div>
</div>
</div>

</div>
