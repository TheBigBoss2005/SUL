<% provide(:title, 'イベント編集') %>
<div class="container">

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="page-header">
          <h1>新規イベント編集</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="well bs-component">
          <%= form_for @event, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
            <% if @event.errors.any? %>
              <div class="alert alert-dismissable alert-danger">
                <strong>Error!</strong>
                <ul>
                  <% @event.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end%>
            <fieldset>
              <legend>イベント基本情報</legend>
              <div class="form-group">
                <%= f.label :name, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :memo, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= f.text_area :memo, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :date, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= f.text_field :date, value: @event.formatted_date, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :participants, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <% if @event.users.empty? %>
                    イベント参加中のユーザは存在しません   
                  <% else %>
                    <ul>
                      <% @event.users.each do |u| %>
                        <li><%= u.name %></li>
                      <% end %>
                    </ul>
                  <% end %>
                </div>
                <div class="col-lg-10 col-lg-offset-2">
                  <% if @not_participate_users.empty? %>
                    イベント未参加のユーザは存在しません
                  <% else %>
                    <select class="form-control" id="event_participant_ids" multiple="multiple" name="event[participant_ids][]">
                      <option value="">追加する参加者を選択</option>
                      <% @not_participate_users.each do |u| %>
                        <option value="<%= u.id %>"><%= u.name %></option>
                      <% end %>
                    </select>
                  <% end %>
                </div>
              </div>
            </fieldset>
            <fieldset>
              <legend>支払情報の追加</legend>
              <% if @event.users.empty? %>
                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                    支払情報を登録する前に参加者を登録してください
                  </div>
                </div>
              <% else %>
                <div class="form-group">
                  <label class="col-lg-2 control-label" for="payment_source_user_ids">支払元</label>
                  <div class="col-lg-10">
                    <select class="form-control" id="source_user_ids" multiple="multiple" name="payment[source_user_ids][]">
                      <% @event.users.each do |u| %>
                        <option value="<%= @event.participants.find_by(user_id: u.id).id %>"><%= u.name %></option>
                      <% end %>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 control-label" for="dest_user">支払先</label>
                  <div class="col-lg-10">
                    <select class="form-control" id="dest_user_id" name="payment[dest_user_id]">
                      <% @event.users.each do |u| %>
                        <option value="<%= u.id %>"><%= u.name %></option>
                      <% end %>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 control-label" for="item_memo">品目</label>
                  <div class="col-lg-10">
                    <input class="form-control" type="text" id="item_memo" name="item[memo]">
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 control-label" for="item_price">金額</label>
                  <div class="col-lg-10">
                    <input class="form-control" type="text" id="item_price" name="item[price]">
                  </div>
                </div>
              <% end %>
            </fieldset>
            <fieldset>
              <legend>登録済支払情報</legend>
              <% if @event.items.empty? %>
                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                    登録済支払情報はありません
                  </div>
                </div>
              <% else %>
                <div class="form-group">
                  <div class="col-lg-12">
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>支払元</th>
                          <th>支払先</th>
                          <th>品目</th>
                          <th>金額</th>
                          <th>精算状況</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @event.items.each do |item| %>
                          <% unless item.payments.empty? then %> 
                            <% item.payments.each do |payment| %>
                              <tr>
                                <td><%= User.find_by(id: Participant.find_by(id: payment.participant_id).user_id).name %></td>
                                <td><%= User.find_by(id: item.user_id).name %></td>
                                <td><%= item.memo %></td>
                                <td><%= payment.price %></td>
                                <td><%= payment.status ? '精算済' : '未精算' %></td>
                              </tr>
                            <% end %>
                          <% end %>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              <% end %>
              <div class="form-group">
                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                    <%= f.button 'キャンセル', class: 'btn btn-default btn-lg' %>
                    <%= f.submit '確定', class: 'btn btn-primary btn-lg' %>
                  </div>
                </div>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
