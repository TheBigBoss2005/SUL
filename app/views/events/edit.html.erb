<% provide(:title, 'イベント編集') %>
<% provide(:use_datepicker, 'event_date') %>
<div class="container">

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="page-header">
          <h1>イベント編集</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="well bs-component">
          <%= form_for @event, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
            <% if @event.errors.any? %>
              <div class="alert alert-dismissable alert-danger">
                <strong>Error!</strong>
                <ul>
                  <% @event.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end%>
            <fieldset>
              <legend>イベント基本情報</legend>
              <div class="form-group">
                <%= f.label :name, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :memo, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= f.text_area :memo, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :date, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= f.text_field :date, value: @event.formatted_date, class: 'form-control', type: 'date' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :participants, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <% if @event.users.empty? %>
                    イベント参加中のユーザは存在しません   
                  <% else %>
                    <ul>
                      <% @event.users.each do |u| %>
                        <li><%= u.name %></li>
                      <% end %>
                    </ul>
                  <% end %>
                </div>
                <div class="col-lg-10 col-lg-offset-2">
                  <% if @not_participate_users.empty? %>
                    イベント未参加のユーザは存在しません
                  <% else %>
                    <select class="form-control" id="event_participant_ids" multiple="multiple" name="event[participant_ids][]">
                      <option value="">追加する参加者を選択</option>
                      <% @not_participate_users.each do |u| %>
                        <option value="<%= u.id %>"><%= u.name %></option>
                      <% end %>
                    </select>
                  <% end %>
                </div>
              </div>
              <div class="form-group">
                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                    <%= link_to 'キャンセル', event_path(@event), class: 'btn btn-default btn-lg' %>
                    <%= f.submit '確定', class: 'btn btn-primary btn-lg' %>
                  </div>
                </div>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
