<% provide(:title, '新規イベント作成') %>
<% provide(:use_datepicker, 'event_date') %>
<div class="container">

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="page-header">
          <h1>新規イベント作成</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="well bs-component">
          <%= form_for @event, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
            <% if @event.errors.any? %>
              <div class="alert alert-dismissable alert-danger">
                <strong>Error!</strong>
                <ul>
                  <% @event.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end%>
            <fieldset>
              <div class="form-group">
                <%= f.label :name, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :memo, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= f.text_area :memo, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :date, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <%= f.text_field :date, class: 'form-control', type: 'date' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :participants, class: 'col-lg-2 control-label' %>
                <div class="col-lg-10">
                  <% if @users.empty? %>
                    イベントの参加者を選択するために、まずはユーザ登録を行ってください
                  <% else %>
                    <%= f.select :participant_ids, @users.map {|u| [u.name, u.id]}, {}, multiple: true , class: 'form-control' %>
                  <% end %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                  <%= link_to 'キャンセル', events_path, class: 'btn btn-default btn-lg' %>
                  <%= f.submit '確定', class: 'btn btn-primary btn-lg' %>
                </div>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% flash.each do |key, value| %>
    <div class="alert alert-dismissable alert-<%= key %>"><%= value %></div>
  <% end %>
</div>
