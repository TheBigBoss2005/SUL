<div class="container">
	<h2>Welcome to SUL!!</h2>
	<h4>まずはログインして下さい</h4>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name), role: 'form') do |f| %>
		<div class="form-group">
		  <%= f.label :email %>
		  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'メールアドレスを入力して下さい' %>
	  </div>

		<div class="form-group">
		  <%= f.label :password %>
		    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'パスワードを入力して下さい' %>
	  </div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>

		  <div><%= f.submit "ログイン", class: 'btn btn-default' %></div>

	<% end %>

</div>
