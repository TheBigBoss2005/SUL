<div class="container">
	<h2>パスワードを忘れたの？</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), role: 'form', html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

		<div class="form-group">
		  <%= f.label :email %>
	  	<%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'メールアドレスを入力して下さい' %>
	  </div>

	  <div><%= f.submit "新しいパスワードを送ってあげるよ", class: 'btn btn-default' %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
